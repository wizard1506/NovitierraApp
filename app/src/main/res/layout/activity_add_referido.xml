<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:orientation="vertical"
    tools:context=".addReferido">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos del Referido"
            android:textSize="24sp"
            android:textColor="@color/azul_novi"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*Nombres"
            android:textColor="@color/azul_novi"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            >
        </TextView>
        <EditText
            android:id="@+id/referidoNombres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/azul_novi"
            android:textSize="14sp"
            android:hint="Nombre completo del prospecto"
            android:inputType="textCapCharacters"
            >
        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*Apellido"
            android:textColor="@color/azul_novi"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            >
        </TextView>
        <EditText
            android:id="@+id/referidoApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/azul_novi"
            android:inputType="textCapCharacters"
            android:maxLength="9"
            android:textSize="14sp">
        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefono"
            android:textColor="@color/azul_novi"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            >

        </TextView>
        <EditText
            android:id="@+id/referidoTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/azul_novi"
            android:inputType="number"
            android:maxLength="13"
            android:textSize="14sp"
            >

        </EditText>

        <Button
            android:id="@+id/referidoAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Referido"
            android:textColor="@color/white">
        </Button>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo"
            >
        </ImageView>
    </LinearLayout>



</LinearLayout>