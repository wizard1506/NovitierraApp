<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Formularios"
    android:background="@color/azul_novi"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos Personales del Cliente"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/amarillo"
                android:layout_marginStart="10dp"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del cliente:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nombreCliente"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido del cliente:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/apellidoCliente"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido de Casada:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/apellidoCasada"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prefijo:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/prefijo"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Identificacion:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>

            <Spinner
                android:id="@+id/tipoIdentificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:prompt="@string/SpinnerIdentificacion"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Documento de identidad:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ciCliente"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                android:ems="10"
                android:inputType="number"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extension:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/extensionCliente"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nacionalidad:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nacionalidad"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btDatePickerFechaNac"
            android:text="Fecha Nacimiento"
            android:textColor="@color/white"
            android:elevation="10dp"
            style="?android:spinnerStyle"
            android:onClick="openDatePicker"
            >

        </Button>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fechaNacimiento"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado Civil:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>

            <Spinner
                android:id="@+id/estadoCivil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:prompt="@string/SpinnerEstadoCivil"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sexo: "
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radiogroupGenero"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/masculino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masculino"
                    android:textColor="@color/white"
                    android:theme="@style/radiobuttonWhite"
                    android:shadowColor="@color/white"
                    android:textColorHighlight="@color/white"

                    />
                <RadioButton
                    android:id="@+id/femenino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:theme="@style/radiobuttonWhite"
                    android:shadowColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:text="Femenino"
                    />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel de Estudio:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>

            <Spinner
                android:id="@+id/nivelEstudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:prompt="@string/SpinnerNivelEstudio"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profesion/Ocupacion:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profesion"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos de Vivienda"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/amarillo"
                android:layout_marginStart="10dp"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de vivienda:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>

            <Spinner
                android:id="@+id/tipoVivienda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:prompt="@string/SpinnerTipoVivienda"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tenencia:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>

            <Spinner
                android:id="@+id/tenencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:prompt="@string/SpinnerTenencia"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costo Aproximado:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/costoAprox"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                android:inputType="number"
                ></EditText>

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radiogroupVivienda"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/viviendaBs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bs"
                    android:textColor="@color/white"
                    android:theme="@style/radiobuttonWhite"
                    android:shadowColor="@color/white"
                    android:textColorHighlight="@color/white"

                    />
                <RadioButton
                    android:id="@+id/viviendaDolar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:theme="@style/radiobuttonWhite"
                    android:shadowColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:text="$us"
                    />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de Propietario:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/propietarioVivienda"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefono:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/telefonoPropietario"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                android:inputType="number"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pais:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/paisVivienda"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dpto:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>

            <Spinner
                android:id="@+id/dptoBolivia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:prompt="@string/SpinnerDpto"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciudad:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ciudadVivienda"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barrio:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/barrioVivienda"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avenida:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/avenidadVivienda"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calle:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/calleVivienda"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/numeroVivienda"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                android:inputType="number"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos Telefono/Laboral(Empresa)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/amarillo"
                android:layout_marginStart="10dp"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telf. Fijo:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/telfFijoCliente"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                android:inputType="number"
                ></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telf. Movil:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/telfMovilCliente"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                android:inputType="number"
                ></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telf. fijo Oficina:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/telfFijoOficina"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                android:inputType="number"
                ></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telf. Movil Oficina:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/telfMovilOficina"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                android:inputType="number"
                ></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empresa:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/empresaNombre"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                ></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direccion:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/direccionEmpresa"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                ></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rubro:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rubroEmpresa"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                ></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingresos:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                ></TextView>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ingresos"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                android:inputType="number"
                ></EditText>

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radiogroupIngresos"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/ingresosBs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bs."
