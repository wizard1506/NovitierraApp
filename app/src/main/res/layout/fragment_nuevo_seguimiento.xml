<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nuevoSeguimiento"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seguimiento de prospecto"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@color/azul_novi"
        android:layout_gravity="center">

    </TextView>


<EditText
    android:id="@+id/txtaddSeguimiento"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Ingrese el texto...."
    android:inputType="textMultiLine|textCapCharacters"
    android:minLines="4"
    android:maxLines="7"
    android:scrollbars="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp">

</EditText>
    <Button
        android:id="@+id/btAddSeguimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:text="Registrar Seguimiento">

    </Button>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo">

    </ImageView>

</LinearLayout>