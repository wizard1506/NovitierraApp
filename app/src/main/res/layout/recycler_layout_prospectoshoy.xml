<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/numeracionProspectos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#"
                    android:textStyle="bold"
                    android:textColor="@color/azul_novi"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    >

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre Completo:"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/azul_novi"
                    android:layout_marginRight="10dp"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefono:"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/azul_novi"
                    android:layout_marginRight="10dp"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Urbanizacion:"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/azul_novi"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zona:"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:textColor="@color/azul_novi"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lugar:"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:textColor="@color/azul_novi"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contesto llamada:"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/azul_novi"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vigencia hasta:"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:textColor="@color/azul_novi"
                    android:layout_marginRight="10dp"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Observacion:"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:textColor="@color/azul_novi"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    >
                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nombreProspecto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/azul_novi"
                    android:textSize="11sp"
                    android:text="Nombre Cliente">
                </TextView>
                <TextView
                    android:id="@+id/telefonoProspecto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/azul_novi"
                    android:textSize="11sp"


                    android:text="Telefono">
                </TextView>
                <TextView
                    android:id="@+id/urbanizacionProspectos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/azul_novi"
                    android:textSize="11sp"
                    android:text="Urbanizacion"
                    android:visibility="gone"
                    >

                </TextView>
                <TextView
                    android:id="@+id/zonaProspectos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/azul_novi"
                    android:textSize="11sp"
                    android:text="zona"
                    android:visibility="gone"
                    >
                </TextView>
                <TextView
                    android:id="@+id/lugarProspectos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/azul_novi"
                    android:textSize="11sp"
                    android:text="Lugar"
                    android:visibility="gone"
                    >
                </TextView>
                <TextView
                    android:id="@+id/llamadaProspecto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/azul_novi"
                    android:textSize="11sp"
                    android:text="Llamada"
                    android:visibility="gone"
                    >
                </TextView>
                <TextView
                    android:id="@+id/vigenciaProspecto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/azul_novi"
                    android:textSize="11sp"
                    android:text="Vigencia"
                    >
                </TextView>
                <TextView
                    android:id="@+id/observacionProspectos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/azul_novi"
                    android:textSize="11sp"
                    android:text="Observacion"
                    android:visibility="gone"
                    >
                </TextView>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/updateProspecto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modificar"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:backgroundTint="#009688"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            >
        </Button>
        <Button
            android:id="@+id/addSeguimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seguimiento"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:backgroundTint="#3F51B5"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            >
        </Button>
        <Button
            android:id="@+id/deleteProspecto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:textSize="10dp"
            android:backgroundTint="#F44336"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            >
        </Button>

    </LinearLayout>

</LinearLayout>