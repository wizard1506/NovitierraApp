<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/numeracionReferidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#"
                    android:textStyle="bold"
                    android:textColor="@color/azul_novi"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    >

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombres:"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/azul_novi"
                    android:layout_marginRight="10dp"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apellidos:"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/azul_novi"
                    android:layout_marginRight="10dp"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefono:"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/azul_novi"
                    android:layout_marginRight="10dp"
                    >
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/recyclerReferidoNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/azul_novi"
                    android:textSize="11sp"
                    android:text="Nombre Cliente">
                </TextView>
                <TextView
                    android:id="@+id/recyclerReferidoApellido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/azul_novi"
                    android:textSize="11sp"
                    android:text="Telefono">
                </TextView>
                <TextView
                    android:id="@+id/recyclerReferidoTelefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/azul_novi"
                    android:textSize="11sp"
                    android:text="Urbanizacion">

                </TextView>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/updateReferido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modificar"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:backgroundTint="#FFC107"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            >
        </Button>
        <Button
            android:id="@+id/verTerrenosReferido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Terrenos"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:backgroundTint="#2196F3"
            android:layout_marginRight="10dp"
            >
        </Button>
        <Button
            android:id="@+id/deleteReferido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:textSize="10dp"
            android:backgroundTint="#F44336"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            >
        </Button>

    </LinearLayout>

</LinearLayout>