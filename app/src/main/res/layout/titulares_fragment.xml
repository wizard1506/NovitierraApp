<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".titulares">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clientes"
        android:textSize="24sp"
        android:textColor="@color/azul_novi"
        android:textStyle="bold"
        android:gravity="center">
    </TextView>
    <TextView
        android:id="@+id/fechatitularHoy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha Hoy"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:textColor="@color/azul_novi"
        android:textStyle="bold"

        >
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mas recientes (20)"
        android:textSize="16sp"
        android:textColor="@color/azul_novi"
        android:textStyle="bold"
android:layout_marginStart="20dp"
        >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar: "
            android:textSize="14sp"
            android:textColor="@color/azul_novi"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            >
        </TextView>

        <EditText
            android:id="@+id/etbuscarTitular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre, Apellidos o CI...."
            android:layout_marginEnd="30dp"
            ></EditText>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTitular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6E9EF"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        >

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>