<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NovitierraApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_novi</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/azul_novi</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azul_novi</item>
        <item name="colorSecondaryVariant">@color/azul_novi</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NovitierraApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_novi</item>
        <item name="colorPrimaryVariant">@color/azul_novi</item>
        <item name="colorOnPrimary">@color/azul_novi</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azul_novi</item>
        <item name="colorSecondaryVariant">@color/azul_novi</item>
        <item name="colorOnSecondary">@color/azul_novi</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="radiobuttonWhite" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>



    <style name="Theme.NovitierraApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NovitierraApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>